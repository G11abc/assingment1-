/*sum of each row of matrix */
#include <stdio.h>
int main()
{
    int i,j,m,n,a[10][10],sum=0;
    printf("enter row and coloumns");
    scanf("%d%d",&m,&n);
    for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            printf("enter element ");
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<m;i++){
        sum=0;
        for(j=0;j<n;j++){
            sum=sum+a[i][j];
        }
        printf("%d is the sum of %d row ",sum,i+1);
    }
    return 0;
}
