/*smallest and largest element in array */
#include <stdio.h>
int main()
{
int a[10], i, n,largest,smallest;
printf(" Enter the limit of the array");
scanf("%d",&n);
printf("input array element\n");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
largest = a[0];
smallest = a[0];
for (i = 1; i < n; i++)
{
if (a[i] > largest)
{
largest = a[i];
}
if (a[i] < smallest)
{
smallest = a[i];
}
}

printf("The largest element is: %d\n", largest);
printf("The smallest element is: %d\n", smallest);
return 0;
}
